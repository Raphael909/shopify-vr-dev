{{ 'component-image-with-text.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  .in-press-container {
    display: flex;
    flex-flow: row nowrap;
    justify-content: center;
    align-items: center;
    column-gap: 20px;
    box-sizing: border-box;
  }

  .image-container{
    width: 100%;
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: center;
    column-gap: 20px;
    row-gap: 20px;
    padding: 10px 10px;
    box-sizing: border-box;
    }

  .in-press-logo{
    width: 60%;
    height: 150px;
    padding-right: 10px;
    padding-left: 40px;
    aspect-ratio: 16/9;
    overflow: hidden;
    box-sizing: border-box;
  }
  .in-press {
    max-width: 190px;
    height: 240px;
    aspect-ratio: 16/9;
    overflow: hidden;
    border-radius: 2px;
    box-sizing: border-box;
  }
  .in-press img, .in-press-logo img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    object-position: 50% 50%;
    display: block;
  }
  .vertical-line{
    height:250px;
  }

  .in-press-text{
    width: 100%;
    display: flex;
    flex-flow: column nowrap;
    justify-content: center;
    align-items: center;
    row-gap: 30px;
    padding: 2rem;
    margin:0 auto;
  }

  .in-press-text__content{
    max-width: 350px;
    text-align: center;
  }
  .in-press-text__content span{
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    font-family: 'QuickSand', sans-serif;
    font-size: 1.8rem;
    font-weight: 600;
    color: #636262;
  }
  .read-more-button{
      display: inline-block;
      padding: 0.6em 1.6rem;
      background-color: #ffffff;
      color: #636262;
      border: 1px solid #d4baba;
      border-radius: 2px;
      transition: background-color 0.2s ease;
      font-size: 1.8rem;
      font-family: 'Cinzel', sans-serif;
      text-align: center;
      text-decoration: none;
      text-transform: uppercase;
      cursor: pointer;
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.section_color_scheme }}">
  <div class="section-wrapper-width">
    <div class="image-with-text {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
      <div class="in-press-container">
        <div class="image-container">
          <div class="in-press-logo">
            {% render 'image-drop-press',
              image: section.settings['image-press-release'],
              page_width: settings.page_width
            %}
          </div>
          <div class="in-press">
            {% render 'image-drop-press',
              image: section.settings['image-press-content'],
              page_width: settings.page_width
            %}
          </div>
        </div>
        <div class="vertical-line">
          {% render 'icon-vertical-line' %}
        </div>
        <div class="in-press-text">
          <div class="in-press-text__content">
            <span> {{ section.blocks[0].settings.release_text | replace: '<p>', '' | replace: '</p>', '' }} </span>
          </div>
          <div class="in-press-text__button">
            <a href="{{ section.blocks[1].settings.button_link }}" class="read-more-button" role="button">
              {{- section.blocks[1].settings.button_label -}}
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Press Release Info",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "image-press-release",
      "label": "Press Logo"
    },
    {
      "type": "image_picker",
      "id": "image-press-content",
      "label": "t:sections.image-with-text.settings.image.label"
    },
    {
      "type": "url",
      "id": "link2",
      "label": "Link",
      "info": "Optional"
    },
    {
      "type": "color_scheme",
      "id": "section_color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.multirow.settings.container_color_scheme.label",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "t:sections.image-with-text.blocks.text.name",
      "limit": 1,
      "settings": [
        {
          "type": "richtext",
          "id": "release_text",
          "default": "t:sections.image-with-text.blocks.text.settings.text.default",
          "label": "t:sections.image-with-text.blocks.text.settings.text.label"
        }
      ]
    },
    {
      "type": "button",
      "name": "t:sections.image-with-text.blocks.button.name",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "button_label",
          "default": "READ MORE",
          "label": "t:sections.image-with-text.blocks.button.settings.button_label.label",
          "info": "t:sections.image-with-text.blocks.button.settings.button_label.info"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "t:sections.image-with-text.blocks.button.settings.button_link.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Press Release Info",
      "blocks": [
        {
          "type": "text"
        },
        {
          "type": "button"
        }
      ]
    }
  ]
}
{% endschema %}
