<div class="logoList--container2" style="padding-top: {{ section.settings.padding_top | append: "px" }}; padding-bottom: {{ section.settings.padding_bottom | append: "px" }}">
  <h2 class="h1">{{ section.settings.title | escape }}</h2>
  <ul class="logo-list">
    {%- for block in section.blocks -%}
      <li class="logoList--item2" {{ block.shopify_attributes }}>
        {%- if block.settings.link != blank -%}
          <a href="{{ block.settings.link }}">
        {%- endif -%}
          {%- if block.settings.image != blank -%}
            {{ block.settings.image | img_url: '160x160', scale: 2 | img_tag: block.settings.image.alt }}
          {%- else -%}
            {{ 'logo' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
        {%- if block.settings.link != blank -%}
          </a>
        {%- endif -%}
      </li>
    {%- endfor -%}
  </ul>
</div>

<style>
    @media screen and (max-width: 749px)
  {
  .logoList--container2 {
    padding-top: 20px;
    padding-bottom: 20px;
    margin: 0;
    background: #ffefef;
  }

  .logoList--container2 ul {
    display: flex; /* Use flexbox for horizontal alignment */
    flex-wrap: nowrap; /* Prevent wrapping */
    gap: 5rem; /* Space between logos */
  }

  .logoList--item2 {
    display: inline-block;
    max-width: 200px;
   
  }

  .logoList--item2 img {
    object-fit: contain; /* Scale the image to fit within the box */
    width: 100%;
    height: 100%;
  }
  }
  @media screen and (min-width: 992px)
  {
  .logoList--container2 {
    padding-top: 20px;
    padding-bottom: 20px;
    margin: 0;
    background: #ffefef;
  }

  .logoList--container2 ul {
    display: flex; /* Use flexbox for horizontal alignment */
    flex-wrap: nowrap; /* Prevent wrapping */
    justify-content: center; /* Center the logos horizontally */
    gap: 5rem; /* Space between logos */
  }

  .logoList--item2 {
    display: inline-block;
    max-width: 200px;
   
  }

  .logoList--item2 img {
    object-fit: contain; /* Scale the image to fit within the box */
    width: 100%;
    height: 100%;
  }
  }
  @media (max-width: 768px) {
    .logoList--container2 ul {
      flex-wrap: wrap; /* Allow wrapping on smaller screens */
    }

    .logoList--item2 {
      height: 107px; /* Adjust height for smaller screens */
      width: 127px;  /* Adjust width for smaller screens */
    }
  }
</style>

